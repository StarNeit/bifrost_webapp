{
  "compilerOptions": {
    "target": "es2020",
    "lib": ["es2020", "DOM"],
    "jsx": "react-jsx",
    "module": "commonjs",
    "strict": true,
    "noEmit": true,
    "allowJs": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "typeRoots": ["./types", "node_modules/@types"],
    "paths": {
      "Report": ["./src/reports/ReportExample.tsx"]
    }
  },
  "include": ["src"]
}
